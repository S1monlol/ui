---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  color?: undefined | 'base' | 'brand'
  size?: undefined | 'sm' | 'md' | 'lg'
  align?: undefined | 'start' | 'center' | 'end'
  space?: undefined | 'none' | 'auto'
}

const { space = 'auto', align = 'center', ...rest } = Astro.props
---

<Root
  class:list="row"
  {align}
  {space}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  @layer fulldev {
    .row {
      display: flex;

      &.align-start {
        align-items: flex-start;
        text-align: left;
      }

      &.align-center {
        align-items: center;
      }

      &.align-end {
        align-items: flex-end;
      }

      &.space-auto {
        > * + * {
          margin-left: var(--space-auto);
        }
      }
    }
  }
</style>
