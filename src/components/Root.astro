---
import type { HTMLTag } from 'astro/types'
import { mapKeys } from 'radash'

type Props<As extends HTMLTag> = {
  as?: As
  slot?: any
  if?: 'content' | any
  [key: string | number | symbol]: any
}

const {
  as: As = 'div',
  if: ifProp = 'content',
  space,
  theme,
  variant,
  underline,
  density,
  size,
  align,
  justify,
  color,
  position,
  frame,
  ratio,
  contrast,
  structure,
  text,
  html,
  radius,
  level,
  mask,
  reverse,
  lead,
  ...rest
} = Astro.props

const slot = await Astro.slots.render('default')
const hasContent = (str?: string) =>
  typeof str === 'string' && str.trim().length > 0
const render =
  ifProp == 'content'
    ? hasContent(slot) || hasContent(html) || hasContent(text)
    : ifProp

const packageComponents = import.meta.glob('../components/**/*.astro')
const userComponents = import.meta.glob('/src/components/**/*.astro')

const mapComponentKeys = (components: Record<string, any>) =>
  mapKeys(components, (key: string) => {
    const name = key.split('/').pop()?.split('.').shift()
    return name || key
  })

const components = {
  ...mapComponentKeys(packageComponents),
  ...mapComponentKeys(userComponents),
}

const currentComponentName = import.meta.url.split('/').pop()?.split('.')[0]
const found = components[currentComponentName as keyof typeof components]
const ComponentToRender = found ? (await found()).default : As
---

{
  render && (
    <ComponentToRender
      class:list={[
        'root',
        structure,
        {
          lead,
          contrast,
          [`theme-${theme}`]: theme,
          [`level-${level}`]: level,
          [`variant-${variant}`]: variant,
          [`structure-${structure}`]: structure,
          [`size-${size}`]: size,
          [`align-${align}`]: align,
          [`justify-${justify}`]: justify,
          [`position-${position}`]: position,
          [`frame-${frame}`]: frame,
          [`ratio-${ratio}`]: ratio,
          [`color-${color}`]: color,
          [`underline-${underline}`]: underline,
          [`radius-${radius}`]: radius,
          [`mask-${mask}`]: mask,
          [`space-${space}`]: space,
          [`reverse-${reverse}`]: reverse,
        },
      ]}
      {...rest}
    >
      <Fragment set:html={slot} />
    </ComponentToRender>
  )
}

<style is:global lang="scss">
  // @import '@unocss/reset/tailwind.css' layer(base);
  @import '../css/color.css';
  @import '../css/styles.css';
  @import '../css/size.css';
  @import '../css/space.css';

  @layer fulldev {
    .root {
      z-index: 0;
      box-sizing: border-box;
    }
  }
</style>
