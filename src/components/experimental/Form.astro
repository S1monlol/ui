---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Root from 'fulldev-ui/components/Root.astro'

type Props<As extends HTMLTag = 'form'> = Polymorphic<{ as: As }> & {
  structure?: undefined | 'column' | 'row' | 'group'
  space?: undefined | 'none' | 'auto'
}

const {
  as = 'form',
  space = 'auto',
  structure = 'column',
  ...rest
} = Astro.props
---

<Root
  class:list="form"
  {as}
  {structure}
  {space}
  {...rest}
>
  <slot />
</Root>

<style is:global lang="scss">
  .form {
    display: flex;
    width: 100%;
    max-width: calc(var(--space-4) * 44);
  }
</style>
