---
import type { HTMLTag, Polymorphic } from 'astro/types'
import Button from 'fulldev-ui/components/Button.astro'
import Column from 'fulldev-ui/components/Column.astro'
import Heading from 'fulldev-ui/components/Heading.astro'
import Text from 'fulldev-ui/components/Text.astro'
import Root from '../Root.astro'

type Props<As extends HTMLTag = 'div'> = Polymorphic<{ as: As }> & {
  if?: undefined | any
  size?: undefined | 'sm' | 'md' | 'lg'
  color?: undefined | 'base' | 'brand'
  variant?: undefined | 'primary' | 'secondary' | 'tertiary'
  structure?: undefined | 'row' | 'column'
  level?: undefined | 1 | 2 | 3 | 4 | 5 | 6
  heading?: undefined | string
  text?: undefined | string
  icon?: undefined | string
  href?: undefined | string
  target?: undefined | string
}

const {
  variant = 'secondary',
  structure = 'row',
  color = 'brand',
  level = 5,
  heading,
  target,
  text,
  icon,
  href,
  ...rest
} = Astro.props
---

<Root
  class:list={'channel'}
  {structure}
  {...rest}
>
  <Button
    {variant}
    {color}
    {href}
    {target}
    {icon}
  />
  <Column>
    <Heading
      {level}
      set:html={heading}
    />
    <Text set:html={text} />
  </Column>
</Root>

<style>
  .channel {
    gap: var(--space-4);

    * {
      margin: 0;
    }

    .column {
      gap: var(--space-1);

      * {
        margin: 0;
      }
    }
  }
</style>
